<Page x:Class="win10GL.View.TabControlUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:win10GL.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TabControlUI">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="126*"/>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="273*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="363*"/>
        </Grid.RowDefinitions>

        <Label Content="Games" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="64" Width="122" Grid.Column="2" FontFamily="Yu Gothic Light" Foreground="#FFB3ACAC" FontSize="36"/>
        <Label Content="Settings" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="64" Width="148" Grid.Column="3" FontFamily="Yu Gothic Light" Foreground="#FFB3ACAC" FontSize="36"/>
        <Label x:Name="ExitLabel" Content="Exit" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="64" Width="83" Grid.Column="4" Foreground="White" FontFamily="Yu Gothic Light" FontSize="36" Background="{x:Null}"/>
        <Label Content="Cinema" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="64" Width="132" Grid.Column="1" FontFamily="Yu Gothic Light" Foreground="#FFB3ACAC" FontSize="36"/>
        <Frame Name="Frame" Grid.ColumnSpan="6" Source="ExitUI.xaml" Grid.Row="2"/>

    </Grid>
</Page>
